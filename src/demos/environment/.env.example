# Example environment variables for local development
# Copy this to .env and fill in your actual values

# Application Environment
NODE_ENV=development

# API Keys
API_KEY=your_api_key_here # REQUIRED
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/myapp_dev # REQUIRED
# Alternative individual components:
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your_db_password
DATABASE_NAME=myapp_dev

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long # REQUIRED, minimum 32 characters

# Cache Configuration  
REDIS_URL=redis://localhost:6379

# External Services
SENDGRID_API_KEY=SG.your_sendgrid_key
GOOGLE_ANALYTICS_ID=UA-your-analytics-id
WEBHOOK_SECRET=your_webhook_verification_secret

# Security Keys
APP_SECRET=your_application_secret_key
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Feature Flags
ENABLE_NEW_FEATURES=false
MAINTENANCE_MODE=false

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# IMPORTANT:
# - Fill in all REQUIRED variables before running the application.
# - Never commit real secrets to version control.
# - Use strong, randomly generated secrets for production.
# - See demo code for validation and error handling best practices.
